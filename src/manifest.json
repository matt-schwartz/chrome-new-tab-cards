{
	"name": "New Tab Cards",
	"version": "1.2.0",
	"author": "Matthew Schwartz",
	"minimum_chrome_version": "56",
	"manifest_version": 2,
	"description": "New tab page with customizable card displays for most visited, bookmarks, recently closed, and more.",
	"icons": {
		"128": "images/icon_128.png",
		 "48": "images/icon_48.png",
		 "16": "images/icon_16.png"
	},
	"permissions": [
		"bookmarks",
		"topSites",
		"management",
		"tabs",
		"sessions",
		"storage",
		"chrome://favicon/",
		"http://api.openweathermap.org/"
	],
	"chrome_url_overrides":
	{
		"newtab": "new-tab-cards.html"
	},
	"web_accessible_resources": [
		"new-tab-cards.html"
	],
	"offline_enabled": true
}
